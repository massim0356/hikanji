<div class="container search">
  <%= render 'shared/searchbar' %>
</div>
<% if @results == 'No results found' || @results_readings == 'No results found' %>
  <h1 class='no-results'>No results found</h1>
  <p class="no-results-para">Please search by Kanji or search in Hiragana or Katakana by selecting Kanji Reading in the searchbar dropdown.</p>
<% else %>
  <% if @switch %>
    <%= render 'kanjis/results', @results %>
  <% elsif @switch2 %>
    <%= render 'kanjis/results_reading', @results_readings %>
  <% end %>
<% end %>
